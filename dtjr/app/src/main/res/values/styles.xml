    <!-- Interface -->

    <style name="Outermost_layer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_30</item>
        <item name="android:paddingRight">@dimen/padding_30</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- More questions  interface start-->
    <style name="Outermost_more_layer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_20</item>
        <item name="android:paddingRight">@dimen/padding_20</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/home_page</item>
    </style>

    <style name="SingleLineLayoutStyle" parent="@style/LayoutStyle">
        <item name="android:layout_height">@dimen/height_56</item>
    </style>

    <style name="RightArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/more_into</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>


    <style name="LeftArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>



    <style name="TextStyle">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
